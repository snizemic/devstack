{
  "root" : {
    "src" : "./src",    
    "dist" : "./dist"
  },
  "tasks" : {
    "html" : {
      "src" : "html"      
    },
    "css" : {
      "src" : "sass",      
      "dest" : "css",
      "vendorFolder": "vendor",
      "vendorFile": "vendor.scss",      
      "sass" : {        
        "includePaths" : ["./node_modules/bootstrap-sass/assets/stylesheets"]    
      }
    },
    "javascript" : {
      "src" : "javascript",
      "dest" : "js"      
    },
    "browserSync" : {
      "serverName": "dev-server",
      "baseDir" : "./dist/"
    }
  }
}